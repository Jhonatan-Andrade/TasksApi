generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  password     String     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  Task             Task []

  @@map("user")
}

model Task {
  id           String     @id @default(uuid())
  title        String     
  description  String     
  date         String
  taskStatus   String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  userId      String
  user     User   @relation(fields: [userId], references: [id])

  @@map("task")
}
